  <section class="container">

    <PostulanteInfo postulante={postulanteDetails}/>
    <div class="download-pdf">
      <PostulantePDF client:only="react" postulante={postulanteDetails} />  
    </div>
  </section>

  <HeroTitle titulo={postulanteDetails?.nombre} />

</Layout>
